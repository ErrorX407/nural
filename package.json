{
  "name": "nural",
  "version": "0.3.1",
  "description": "The intelligent, schema-first REST framework for Node.js",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "nural": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "rest",
    "api",
    "framework",
    "zod",
    "typescript",
    "schema",
    "openapi"
  ],
  "author": {
    "name": "Chetan Joshi",
    "email": "chetanjoshi707@gmail.com",
    "url": "https://github.com/ErrorX407"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ErrorX407/nural.git"
  },
  "bugs": {
    "url": "https://github.com/ErrorX407/nural/issues"
  },
  "homepage": "https://github.com/ErrorX407/nural#readme",
  "peerDependencies": {
    "express": "^5.2.1",
    "fastify": "^5.7.4"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    }
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "fs-extra": "^11.3.3",
    "inquirer": "^13.2.2",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.2.1",
    "@types/swagger-ui-express": "^4.1.8",
    "fastify": "^5.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "sideEffects": false
}
