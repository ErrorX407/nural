import { Schema } from "nural";
import dotenv from "dotenv";

dotenv.config();

const envSchema = Schema.object({
  PORT: Schema.string().default("3000"),
  NODE_ENV: Schema.enum(["development", "production", "test"]).default("development"),
  <% if (integrations.includes('redis')) { %>REDIS_URL: Schema.string().default("redis://localhost:6379"),<% } %>
  <% if (integrations.includes('rabbitmq')) { %>RABBITMQ_URL: Schema.string().default("amqp://localhost"),<% } %>
  <% if (integrations.includes('prisma-pg')) { %>
  DATABASE_URL: Schema.string(),
  DIRECT_DATABASE_URL: Schema.string().optional(),
  <% } %>
  <% if (integrations.includes('mongoose')) { %>MONGO_URL: Schema.string().default("mongodb://localhost:27017/mydb"),<% } %>
});

export const env = envSchema.parse(process.env);
